<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kkkk"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="90dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="40dp"
        android:width="150dp"
        android:background="#2196F3"
        android:shadowColor="#E91E63"
        android:text="calculator"
        android:textColor="#FFEB3B"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="30dp"
        android:autofillHints=""
        android:background="#FFEB3B"
        android:ems="10"
        android:hint="quizes_15"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textColorHint="#2196F3"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="30dp"
        android:autofillHints=""
        android:background="#FFEB3B"
        android:ems="10"
        android:hint="homework_25"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textColorHint="#2196F3"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="30dp"
        android:autofillHints=""
        android:background="#FFEB3B"
        android:ems="10"
        android:hint="mid_term_30"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textColorHint="#2196F3"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="30dp"
        android:autofillHints=""
        android:background="#FFEB3B"
        android:ems="10"
        android:hint="final_30"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textColorHint="#2196F3"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="30dp"
        android:background="#FFEB3B"
        android:ems="10"
        android:hint="@string/quizes_15"
        android:inputType="textPersonName"
        android:text="caculatore"
        android:textColor="#2196F3"
        android:textColorHint="#2196F3"
        android:textSize="20sp"
        tools:ignore="TextViewEdits" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="100dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:foregroundGravity="top"
        android:inputType="textPersonName"
        android:text="@string/grade_chart"
        android:textColor="#2196F3"
        android:textColorHin="#2196F3"
        android:textColorHint="#2196F3"
        android:textSize="20sp"
        tools:ignore="TextViewEdits"
        tools:text="Grade Chart" />


</LinearLayout>
